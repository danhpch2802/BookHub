<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:menu="@menu/top_app_favorite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/profile"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_back" >
            </ImageView>
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:orientation="vertical">
        <RelativeLayout
            android:id ="@+id/avaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="125dp" android:id="@+id/avatar"
                android:layout_height="125dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/white">
                <androidx.cardview.widget.CardView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/ava"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:src="@drawable/doll_cover"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/avatar"
                android:orientation="vertical"
                android:id="@+id/line2">

                <EditText
                    android:id="@+id/pf_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textAlignment="center"
                    android:textColor="@color/darkred"
                    android:textSize="35sp" />

                <RelativeLayout
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/avatar"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/pf_username">

                    <ImageView
                        android:id="@+id/img_badge"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:paddingTop="9dp"
                        android:src="@drawable/badge" />

                    <TextView
                        android:id="@+id/badge_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_badge"
                        android:paddingTop="16dp"
                        android:text="Badges:"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/badge_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/badge_tv"
                        android:paddingTop="16dp"
                        android:text="10"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/point_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_point"
                        android:paddingTop="16dp"
                        android:text="Points:"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/img_point"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_toRightOf="@id/badge_prize"
                        android:paddingTop="9dp"
                        android:src="@drawable/award" />

                    <TextView
                        android:id="@+id/point_prize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/point_tv"
                        android:paddingTop="16dp"
                        android:text="1000"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
